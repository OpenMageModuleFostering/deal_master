<?xml version="1.0"?>
<config>
    <modules>
        <Wli_Deal>
            <version>0.1.0</version>
        </Wli_Deal>
    </modules>
    <frontend>
        <routers>
            <deal>
                <use>standard</use>
                <args>
                    <module>Wli_Deal</module>
                    <frontName>deal</frontName>
                </args>
            </deal>
        </routers>
        <layout>
            <updates>
                <deal>
                    <file>deal.xml</file>
                </deal>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <deal>
                <use>admin</use>
                <args>
                    <module>Wli_Deal</module>
                    <frontName>deal</frontName>
                </args>
            </deal>
        </routers>
    </admin>
    <adminhtml>
        <!--<menu>
            <deal module="deal">
                <title>Ordertags</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="deal">
                        <title>Manage Order Tags</title>
                        <sort_order>10</sort_order>
                        <action>deal/adminhtml_deal</action>
                    </items>
                </children>
                 <children>
                    <wli_deal module="deal">
